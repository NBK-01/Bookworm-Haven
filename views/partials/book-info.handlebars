    
    <div class="blog-sec cols 12">
    <aside class="book-sec left col s6">
        <h5>Book</h5>
    <ul class="book-list">
        <li>
        <div class="blogImage">
            <img class="responsive-img" src={{img}} />
        </div>
        <div>
            <h6><a class="text-info">{{title}}</a></h6>
            <h7>Author: {{author}}, Publisher: {{publisher}}, Published on:
                {{published_date}}, Genre: {{genre}}</h7>
            <h8>Added by: {{user.username}} </h8>
        </div>
        <li>
    </ul>
    </aside>
        
     <div class="post-sec right col s6">
        {{#if posts.length}}
        <div>
            <h5>Post</h5>
            <ul class="posts-list">
          <li>  {{#each posts as |post|}}
            {{> post-info post}}
            {{/each}}
          </li>
          </ul>
        </div>
        {{else}}
        <h6 class="pb-2 has-text-centered noPosts">No posts for this book</h6>
        {{/if}}
    </div>
</div>