<main class="post center">
  <h3>Add New Post</h3>
  <div>
    <label class="form-label" for="content">Book name: {{currentBook.title}}</label>
    <textarea id="content" name="content" class="form-input w-100" aria-label="With textarea" autofocus="true"
      placeholder="What's on your mind?" ></textarea>
    <button type="submit" style="border: 3px solid var(--accent);
  border-radius: 5px;
  font-size: 20px;
  text-decoration: none;
  color: black;
  padding: 2px;
  cursor: pointer;
  transition: 1s;
  background-color:transparent;" onclick="postHandler(event)">Create</button>
  </div>
</main>

<script src="/js/post.js"></script>